<!DOCTYPE html>
<html lang="es">

<head><%- include('partials/head.ejs') %>
    <link rel="stylesheet" href="/styles/style.css">
    <link rel="stylesheet" href="/styles/app.css">
    </head>
<body>
        <%- include('partials/header.ejs') %>
        


                <!-- Banner -->
                <%- include('partials/banner.ejs') %>
                <!-- /Banner -->

                <!-- ultima visita -->
                <div class="container products-wrapper">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="products-title">Basado en tu Ãºltima visita</h2>
                        </div>
                        <% visitedProducts.forEach(product => { %>
                        <% if (product.category == "visited") { %>
                        <div class="col-12 col-sm-6 col-lg-3">
                         <section class="product-box">
                          <a href="/products/detail/<%-product.id%>">
                           <figure class="product-box_image">
                             <img src="/images/products/<%-product.image%>" alt="imagen de producto">
                             </figure>
                              <article class="product-box_data">
                                <h3>$<%- toThousand(product.price - Math.round(product.price / 100 * product.discount)) %></h3>
                                  <% if (product.discount> 0) { %>
                                     <span><%-product.discount%>% OFF
                                        <% } %></span>
                                         <p><%-product.name%></p>
                                        <i class="fas fa-truck"></i>
                                        </article>
                                        </a>
                                    </section>
                                </div>
                            <% } %>
                            
                        <% }) %>
                        
                    </div>
                </div>
                <!-- /ultima visita -->

                <!-- Ofertas -->
                <div class="container products-wrapper">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="products-title">Ofertas</h2>
                        </div>
                        <% saleProducts.forEach(product => { %>
                            <% if (product.category == "in-sale") { %>
                                <div class="col-12 col-sm-6 col-lg-3">
                                    <section class="product-box">
                                        <a href="/products/detail/<%-product.id%>">
                                            <figure class="product-box_image">
                                                <img src="/images/products/<%-product.image%>" alt="imagen de producto">
                                            </figure>
                                            <article class="product-box_data">
                                                <h3>$<%- toThousand(product.price - Math.round(product.price / 100 * product.discount)) %></h3>
                                                  <% if (product.discount> 0) { %>
                                                     <span><%-product.discount%>% OFF
                                                        <% } %></span>
                                                         <p><%-product.name%></p>
                                                        <i class="fas fa-truck"></i>
                                                        </article>
                                        </a>
                                    </section>
                                </div>
                            <% } %>
                            
                        <% }) %>
                        
                    </div>
                </div>
               

               
            
            <%- include('partials/footer.ejs') %>
            <!-- /footer -->
            <%- include('partials/scripts') %>
    </body>

</html>
